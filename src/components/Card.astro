---
interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="p-4 bg-orange-100 border-orange-100 hover:bg-white border-2 rounded-md">
	<a href={href}>
		<h2 class="font-bold">
			{title}
			<span>&rarr;</span>
		</h2>
		<p class="text-sm mt-2 opacity-70">
			{body}
		</p>
	</a>
</li>